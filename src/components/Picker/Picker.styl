.picker
	margin-bottom 90px
	&__title
		margin-top 0
		margin-bottom 60px
		color #4fa6ff
		font-size 53px
		font-weight 500
		text-transform uppercase
	&__list
		display flex
		flex-direction row
		justify-content space-between
		align-items center 
		padding 0 30px
		background-color #17161a
		border-radius 20px
		box-shadow inset 0 1px 5px rgba(0, 0, 0, 0.58)
	&__item
		display inline-block
		text-shadow 0 -2px 0 rgba(0, 0, 0, 0.81)
		color #81808a
		font-size 53px
		font-weight 500
		text-transform uppercase
		input
			display none
			&:checked
				+ span
					transform scale(1.2)
					color #fff
					background linear-gradient(to top, #01274d 0%, #002850 24%, #0085eb 100%)
					border-radius 20px
					box-shadow inset 0 1px 1px #a6e1ff
		span
			display inline-block
			padding 30px