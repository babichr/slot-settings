mainFont = sans-serif
lgWidth = 1500px
mdWidth = 1300px
smWidth = 1000px

tabletWidth = 768px
tabletHeight = tabletWidth
phoneHeight = 380px

lg = "(min-width: " + (lgWidth) + ")"
md = "(min-width: " + mdWidth + ") and (max-width: " + (lgWidth - 1) + ")"
sm = "(min-width: " + smWidth + ") and (max-width: " + (mdWidth - 1) + ")"

desktop = "(min-width: " + smWidth + ")"
tablet = "(min-width: " + tabletWidth + ") and (max-width: " + (smWidth - 1) + ")"
tablet_landscape = "(max-height: " + (tabletHeight) + ") and (max-width: " + (mdWidth - 1) + ")"
phone = "(max-width: " + (tabletWidth - 1) + ")"
phone_landscape = "(max-height: " + (phoneHeight - 1) + ")"
phone_tablet = "(max-width: " + (smWidth - 1) + ")"


*
	font-smoothing antialiased
	box-sizing border-box
	&:before
	&:after
		box-sizing border-box

html
body
	margin 0
	padding 0

html
	height 100%

body
	position relative
	min-height 100%
	min-width 320px
	font-family mainFont
	background-color white
	-webkit-tap-highlight-color transparent
	overflow-x hidden