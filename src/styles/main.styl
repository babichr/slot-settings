mainFont = sans-serif
*
	font-smoothing antialiased
	box-sizing border-box
	&:before
	&:after
		box-sizing border-box

html
body
	margin 0
	padding 0

html
	height 100%

body
	position relative
	min-height 100%
	min-width 320px
	font-family mainFont
	background-color white
	-webkit-tap-highlight-color transparent
	overflow-x hidden